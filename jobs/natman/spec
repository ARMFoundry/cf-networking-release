---
name: natman

templates:
  natman_ctl.erb: bin/natman_ctl
  natman.json.erb: config/natman.json

packages:
  - natman

properties:
  natman.garden_address:
    description: "Address of garden server"
    default: 127.0.0.1:7777

  natman.garden_protocol:
    description: "Protocol of garden server"
    default: tcp

  natman.poll_interval:
    description: "Gather and report metrics at this interval, in seconds"
    default: 30
