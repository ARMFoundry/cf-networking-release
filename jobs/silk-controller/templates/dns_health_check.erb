<% unless p("cf_networking.disable") %>
<%
  def port
    p("cf_networking.silk_controller.listen_port")
  end

  def ca_cert
    "/var/vcap/jobs/silk-controller/config/certs/client-ca.crt"
  end

  def client_cert
    "/var/vcap/jobs/silk-controller/config/certs/client.crt"
  end

  def client_key
    "/var/vcap/jobs/silk-controller/config/certs/client.key"
  end
%>

curl -k https://127.0.0.1:<%= port %>/leases \
  --cacert <%= ca_cert %> \
  --cert <%= client_cert %> \
  --key <%= client_key %> \
  --connect-timeout <%= p("cf_networking.silk_controller.connect_timeout_seconds") %>
<% end %>
