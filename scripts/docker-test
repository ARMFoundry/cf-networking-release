#!/bin/bash
set -e -u

ROOT_DIR_PATH=$(cd $(dirname $0)/.. && pwd)
cd $ROOT_DIR_PATH

docker run --privileged \
   --rm \
   -v $PWD:/netman-release \
   -e GOPATH=/netman-release \
   -e GINKGO_EXTRA_FLAGS="${GINKGO_EXTRA_FLAGS:-""}" \
   -e NO_POSTGRES="${NO_POSTGRES:-""}" \
   -w / \
   c2cnetworking/dev \
   /netman-release/ci/netman-tests.sh "$@"
